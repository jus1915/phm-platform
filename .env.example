############################
# 공통
############################
# Timezone
TZ=Asia/Seoul


############################
# Postgres (필수)
############################
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow


############################
# Airflow (필수)
############################
# Linux user/group (Docker 환경용)
AIRFLOW_UID=50000
AIRFLOW_GID=0

# ⚠️ 실제 운영에서는 반드시 변경
AIRFLOW_SECRET_KEY=change_this_to_random_long_string

# ⚠️ 실제 운영에서는 새로 생성 필요
# 예: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=CHANGE_ME_FERNET_KEY


############################
# MLflow (필수: Airflow / accel-server 연동)
############################
MLFLOW_TRACKING_URI=http://mlflow:5000

# 기본 실험/모델 이름 (선택)
MLFLOW_EXPERIMENT=phm-anomaly
MLFLOW_MODEL_NAME=ae_mag128


############################
# accel-server (FastAPI)
############################
# 외부 노출 포트
ACCEL_HTTP_PORT=8000

# 데이터 저장 경로 (컨테이너 내부)
ACCEL_BASE=/accel_server/data
ACCEL_PARQUET_BASE=/accel_server/parquet_data

# 하위 호환용 (기존 코드에서 사용)
ACCEL_DATA_DIR=/accel_server/data

# 이상 탐지 대상 장비 ID (comma-separated)
ACCEL_ANOM_DEVICES=realtime


############################
# Anomaly Model 옵션 (선택)
############################
AE_PATCH_LIMIT=200000
AE_PATCH_FRACTION=0
